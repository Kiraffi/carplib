{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile windows",
        "type": "process",
        "command": "clang",
        "args": [
          "-g",
          "main.c",
          "-omain.exe",
          "-std=c11",
          "-lopengl32",
          "-lgdi32",
          "-luser32",
          "-lwinmm",
          "-Lc:/windows/SysWOW64"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Compile windows bat",
        "type": "process",
        "command": "./build.bat",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Compile linux",
        "type": "process",
        "command": "clang",
        "args": [
          "-g",
          "main.c",
          "-omain.out",
          "-std=c11",
          "-lX11",
          "-lGL"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }